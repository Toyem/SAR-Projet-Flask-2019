        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="Name">Nom :</label>
                <span>{{ engineerObserveFirstName }} {{ engineerObserveLastName }}</span>
            </div>
        <div class="col-md-6 mb-3">
                <label for="Name">Email :</label>
                <span>{{ engineerObserveEmail }}</span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-9">
            <div class="container">
                <!-- Nav pills -->
                <ul class="nav nav-pills" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" href="/{{ id }}/affaire/carrieres/{{ idCarriere }}/enCours/">
