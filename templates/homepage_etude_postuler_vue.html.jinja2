{% extends "homepage_etude_postuler.html.jinja2" %}

{% block body %}
    <div class=" d-flex flex-column p-3 mb-2 bg-dark text-white size-6 font-weight-bold">
        <div class="row mb-3">
            <div class="mr-3 ml-1 ml-3">
                <button type="button" class="btn btn-outline-light"
                        onclick="location.href='/{{ id }}/etude/postuler/disponibles/';">&lt;&lt;
                </button>
            </div>
            <h4>Vue de la mission</h4>
        </div>
    </div>

    <div class="d-flex flex-column">
        <div class="d-flex flex-inline mb-2">
            <div class="col-md-11">
                <div class=" p-1 bg-info text-white size-6 font-weight-bold">
                    <label for="Name">Mission :</label>
                    <label class ="bg-info text-white size-6 font-weight-bold">{{ mission.titre }}</label>
                </div>
            </div>
            <div class="col-md-auto p-0">
                <button type="button" class="btn btn-success" {{ enable }}
                        onclick="location.href='/{{ id }}/etude/postuler/{{ etat }}/vue/{{ mission.id }}/edit/';">
                    Postuler
                </button>
            </div>
        </div>

        <div class="d-flex flex-inline mb-2"></div>
        {% for date in dates %}
            <div class="mb-2">
                <div class="form-group ml-3">
                    <label for="date">{{ date[0] }} :</label>
                    <label>{{ date[1] }}</label>
                </div>
            {% endfor %}
            </div>


        <div class="d-flex flex-inline mb-2">
            <div class="mb-2 col-md-11">
                <div class="form-group">
                    <div class="p-1 mb-2 bg-info text-white size-6">
                        <label for="description">Description :</label>
                    </div>
                    <label>{{ mission.description }}</label>
                </div>
            </div>
        </div>

        <div class="d-flex flex-inline mb-2">
            <div class="mb-2 col-md-11">
                 <div class="p-1 bg-info text-white size-6 mb-2">
                    <label for="competences">Compétences requises :</label>
                 </div>
            {% for competence in competences %}
                <button type="button" class="btn btn-secondary" disabled>{{ competence.nom }}</button>
            {% endfor %}
            <!-- TODO -->
        </div>
        </div>
{% endblock %}
