{% extends "homepage_etude.html.jinja2" %}

{% block body %}
    <div class="p-3 mb-2 bg-dark text-white size-6 font-weight-bold">
        <div class="row">
            <div class="mr-3 ml-3">
                <button type="button" class="btn btn-outline-light btn"
                        onclick="location.href='/{{ id }}/etude/postuler/disponibles/';">&lt;&lt;
                </button>
            </div>
            <h4>Postuler</h4>
        </div>
    </div>
    <div class="d-flex flex-column">
        <div class="alert alert-success" id="success-message"
             style="display: {% if formulaireSuccess %}block{% else %}none{% endif %};">
            <strong>Le formulaire a &eacute;t&eacute; envoy&eacute; avec succes !</strong>
        </div>
        <div class="d-flex flex-inline mb-2">
            <div class="col-md-12">
                <div class="p-1 bg-info text-white size-6 font-weight-bold">
                    <label for="Name">Mission : </label>
                    <span class="p-1 bg-info text-white size-6 font-weight-bold">{{ mission.titre }}</span>
                </div>
            </div>
        </div>
        <div class="d-flex flex-inline mb-2">
            <div class="mb-2 col-md-12">
                <div class="form-group">
                    <label for="date">Date de creation :</label>
                    <span>{{ mission.date_creation }}</span>
                </div>
            </div>
        </div>
        <div class="d-flex flex-inline mb-2">
            <div class="mb-2 col-md-12">
                <div class="p-1 mb-2 bg-info text-white size-6">
                    <label for="description">Description :</label>
                </div>
                <div class="form-group">
                    <span>{{ mission.description }}</span>
                </div>
            </div>
        </div>
        <form action="{{ url_for("process_form_postuler", id=id, missionId=mission.id,etat=etat) }}" method="post"
              class="needs-validation" novalidate="">
            <div class="d-flex flex-inline mb-2">
                <div class="mb-2 col-md-12">
                    <div class="p-1 mb-0 bg-info text-white size-6 mb-2">
                        <label for="competences">Auto &eacute;valuation des comp&eacute;tences :</label>
                    </div>
                    {% block competence %}
                    {% endblock %}

                </div>
            </div>
            <div class="d-flex flex-inline mb-2">
                <div class="mb-3">
                    <button type="button" class="btn btn-danger mr-3"
                            onclick="location.href='/{{ id }}/etude/postuler/{{ etat }}/vue/{{ mission.id }}/';">
                        annuler
                    </button>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-success" onclick="location.href='/TODO.php';
                                                                       document.getElementById('success-message').style.display='block';">
                        envoyer
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
