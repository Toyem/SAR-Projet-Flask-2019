{% extends "homepage_affaire_mission.html.jinja2" %}

{% block gridMission %}
    <div class="d-flex flex-column">
        <form>
            {% for mission in listToShow %}
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <input type="checkbox">
                        </div>
                    </div>
                    <div class="col-sm-10" style="width:auto;border-width: 3px;border-color: #000;">
                        {{ mission.titre }}
                    </div>
                    <div class="mb-3">
                        <button type="button" class="btn btn-primary"
                            onclick="location.href='/{{ id }}/affaire/missions/vue/{{ mission.id }}/';">Vue
                        </button>
                    </div>
                </div>
            {% endfor %}
        </form>
    </div>
{% endblock %}
