{% extends "homepage_affaire_mission.html.jinja2" %}

{% block gridMission %}
    <form>
        {% for mission in missions %}
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <input type="checkbox">
                    </div>
                </div>
                <input type="text" class="form-control" placeholder="{{ mission.name }}">
                <div class="mb-3">
                    <button type="button" class="btn btn-danger"
                            onclick="location.href='{{ url_for("edit_mission", mission="test") }}';">Edit
                    </button>
                </div>
            </div>
        {% endfor %}
    </form>
{% endblock %}
